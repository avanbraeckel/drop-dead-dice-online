<p id="alert"><%= alert %></p>

<h1>Drop Dead Dice - Sign-In</h1>
<%= form_tag sessions_path do |form| %>
  <div class="field">
    <br><%= label_tag :email %>:<br>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %>:<br>
    <%= password_field_tag :password %>
  </div>
  <br>
  <div class="actions">
    <%= submit_tag "Sign-In" %>
  </div>
<% end %>

<p>
  <%= link_to "Sign Up", signup_path %>
</p>
